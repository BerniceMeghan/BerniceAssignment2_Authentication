<%- include('../partials/header'); -%>
<%- include('../partials/main_nav'); -%>
<br>
<main class="container">
<div class="row">
    <div class="col-md-offset-3 col md-8">
        <h1>Business List</h1>
        <%if(typeof displayName =='string' && displayName){%>
        <a href="/businessList/add" class="btn btn-primary" role="button">
            <i class ="fas fa-plus-circle"></i>Add a Business List</a>
            <%}%>
        <br>
        <table class = "table table-bordered table-striped table-hover">
            <tr>
                <th class="text-content col-2">Contact Name</th>
                <th class="text-content col-2">Contact Number</th>
                <th class="text-content col-2">Email Address</th>
                
                
           <% for(let count = 0; count<BookList.length; count++){ %>
            <tr>
                <td class = "text-center col-2"><%=BookList[count].name%></td>
                <td class = "text-center col-2"><%=BookList[count].number%></td>
                <td class = "text-center col-1"><%=BookList[count].email%></td>
               
                <%if(typeof displayName =='string' && displayName){%>
                <td class ="text-center col-1"><a href="/businessList/edit/<%=BookList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                <td class ="text-center col-1"><a href="/businessList/delete/<%=BookList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>    
            <%}%>
            </tr>
                <%}%>
            </table>

        </div>
    </div>
    </main>
<%- include('../partials/bottom_nav'); -%>
<%- include('../partials/footer'); -%>